{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "esnext",
    "strict": false,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  //   "lib": [
  //     "esnext",
  //     "dom",
  //     "dom.iterable",
  //     "scripthost"
  //   ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
